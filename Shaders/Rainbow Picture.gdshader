void fragment() {
	// Called for every pixel the material is visible on.
	// get pixel color
	COLOR = texture(TEXTURE,UV);
	if(COLOR.a > 0.1){
		COLOR = COLOR * 0.5 + vec4( UV , 0.5 , 1) * 0.5;
	}
}

